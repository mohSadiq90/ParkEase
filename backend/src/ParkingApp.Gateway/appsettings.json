{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Yarp": "Information"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "api-route": {
                "ClusterId": "api-cluster",
                "Match": {
                    "Path": "/api/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "/api/{**catch-all}"
                    }
                ]
            },
            "uploads-route": {
                "ClusterId": "api-cluster",
                "Match": {
                    "Path": "/uploads/{**catch-all}"
                }
            },
            "health-route": {
                "ClusterId": "api-cluster",
                "Match": {
                    "Path": "/health"
                }
            }
        },
        "Clusters": {
            "api-cluster": {
                "Destinations": {
                    "backend": {
                        "Address": "https://parkeaseapp.azurewebsites.net/"
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:30",
                        "Timeout": "00:00:10",
                        "Policy": "ConsecutiveFailures",
                        "Path": "/health"
                    }
                }
            }
        }
    },
    "RateLimiting": {
        "PermitLimit": 100,
        "WindowSeconds": 60
    }
}